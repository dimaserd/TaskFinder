@model TwoStu.Logic.Entities.Subject

@{
    ViewBag.Title = "Edit";
}

<h2>Редактировать предмет @Model.Name</h2>

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" }, labelText:"Название предмета")
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить изменения" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<hr />
<div>
    <strong>
        @Html.ActionLink("[К списку предметов]", "Index") |
        @Html.ActionLink("[К списку разделов по предметам]", "Index", "SubjectSections") |
        @Html.ActionLink("[К списку уточнений по разделам]", "Index", "SubjectDivisions") |
    </strong>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
