@using HtmlExtensions.Renderers
@using Extensions.String
@model IEnumerable<TwoStu.Logic.Entities.TaskSolution>

@{
    ViewBag.Title = "Index";
    GlyphiconRenderer GISigns = new GlyphiconRenderer();
}

<h2>Список загруженных решений @GISigns.Count(Model.Count()).ToHtml()</h2>

<p>
    @Html.ActionLink("Создать новое", "Create") |
    @Html.ActionLink("Создать новое по физике", "CreatePhysics")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.TaskDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FilePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th>

        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.TaskDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FilePath)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FileName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Детали", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
