@model IEnumerable<TwoStu.Logic.Entities.SubjectSection>

@{
    ViewBag.Title = "Index";
}

<h2>Список разделов по предметам</h2>

<p>
    @Html.ActionLink("Создать новый раздел", "Create")
</p>
<table class="table table-bordered table-striped">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromSubject.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FromSubject.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Детали", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<hr />
@Html.ActionLink("К списку предметов", "Index", "Subjects")