@using TwoStu.Logic.Entities
@model TwoStu.Logic.Entities.Subject

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Subject</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dd>
            <h3>Разделы предмета</h3>
            @foreach(SubjectSection subjectSection in Model.SubjectSections)
            {
                <p>@subjectSection.Name <a href="@Url.Action("Details", "SubjectSections", new { id = subjectSection.Id })">[Подробнее]</a></p>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
