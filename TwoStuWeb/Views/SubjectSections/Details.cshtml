@using TwoStu.Logic.Entities
@model TwoStu.Logic.Entities.SubjectSection

@{
    ViewBag.Title = "Details";
}

<h2>Подробнее о разделе</h2>

<div>
    <h4>Раздел @Model.Name предмета @Model.FromSubject.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FromSubject.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FromSubject.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        
    </dl>
    <h3>Список уточнений по разделу</h3>
    @if (Model.SubjectDivisions.Count > 0)
    {
        foreach (SubjectDivision sd in Model.SubjectDivisions)
        {
            <p>@sd.Name</p>
        }
    }
    else
    {
        <p>Нет уточнений по данному разделу</p>
    }
    @Html.ActionLink("Создать уточнение", "Create", "SubjectDivisions")
</div>

<hr />

<p>
    @Html.ActionLink("Редактировать раздел", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("К списку разделов", "Index")
</p>
