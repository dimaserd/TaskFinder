@model IEnumerable<TwoStu.Logic.Entities.SubjectDivision>

@{
    ViewBag.Title = "Index";
}

<h2>Список уточнений по разделам предметов</h2>

<p>
    @Html.ActionLink("Создать новое уточнение к разделу предмета", "Create")
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FromSubjectSection.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FromSubjectSection.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Детали", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<hr/>
<div>
    @Html.ActionLink("К списку разделов", "Index", "SubjectSections") |
    @Html.ActionLink("К списку предметов", "Index", "Subjects")
</div>